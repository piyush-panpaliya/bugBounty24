<%- layout('layouts/boilerplate') %>
<div class="border mx-2 mt-2 p-5" style="background-color: #cfcfcf;">
    <div class="d-flex justify-content-between align-items-center mb-5"> 
        <h1><%= found.title %></h1>
        <h4><%= date %>, <%= time %></h4>
    </div>
    <p class="fs-3"><%= found.description %></p>
    <% if (found.upload !='' ) { %>
        <a href="<%= found.upload %>" type="<%= found.uploadType %>" download>Download attachments</a>
    <% } %>
    <h3>Status:</h3>
    <% if (request.secretary_status === null) { %>
        <p>Request has been generated by the respective club and is pending recommendation by the corresponding secretary.</p>
    <% } else if (request.secretary_status === false) { %>
        <p>Request has been disapproved by the corresponding secretary.</p>
    <% } else if (request.club_fa_status === null) { %>
        <p>Request has been recommended by the corresponding secretary and is pending approval by the respective club FA.</p>
    <% } else if (request.club_fa_status === false) { %>
        <p>Request has been disapproved by the respective club FA.</p>
    <% } else if (request.society_fa_status === null) { %>
        <p>Request has been approved by the respective club FA and is pending recommendation by the Society FA.</p>
    <% } else if (request.society_fa_status === false) { %>
        <p>Request has been disapproved by the Society FA.</p>
    <% } else if (request.chairsap_status === null) { %>
        <p>Request has been visible to the Students Office and is pending approval by the chairSAP.</p>
    <% } else if (request.chairsap_status === false) { %>
        <p>Request has been disapproved by the chairSAP.</p>
    <% } else { %>
        <p>Request has been approved by all authorities and processed successfully.</p>
    <% } %>  
    <% if (type==='secretary'){ %>
    <form method="post" action="/approval">
        <input name="type" value="<%= type %>" hidden>
        <input name="id" value="<%= found._id %>" hidden>
        <label>Do you want to approve this Request?</label>
        <button class="btn btn-success me-2" name="Yes" value="yes">Yes</button><button class="btn btn-light" name="No">No</button>
    </form>
    <% } %>
    <% if (type==='club_fa'){ %>
        <form method="post" action="/approval">
            <input name="type" value="<%= type %>" hidden>
            <input name="id" value="<%= found._id %>" hidden>
            <label>Do you want to approve this Request?</label>
            <button class="btn btn-success me-2" name="Yes" value="yes">Yes</button><button class="btn btn-light" name="No">No</button>
        </form>
    <% } %>
    <% if (type==='society_fa'){ %>
        <form method="post" action="/approval">
            <input name="type" value="<%= type %>" hidden>
            <input name="id" value="<%= found._id %>" hidden>
            <label>Do you want to approve this Request?</label>
            <button class="btn btn-success me-2" name="Yes" value="yes">Yes</button><button class="btn btn-light" name="No">No</button>
        </form>
    <% } %>
    <% if (type==='chairsap'){ %>
        <form method="post" action="/approval">
            <input name="type" value="<%= type %>" hidden>
            <input name="id" value="<%= found._id %>" hidden>
            <label>Do you want to approve this Request?</label>
            <button class="btn btn-success me-2" name="Yes" value="yes">Yes</button><button class="btn btn-light" name="No">No</button>
        </form>
    <% } %>
</div>
